@model PartyInviteForm.Models.ParticipantListModel

@{
    ViewBag.Title = "Admin";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>
</head>
<body>
    @{var content = "";
        var empty = "Участников пока нет";
        foreach (var item in Model.GetParticipants())
        {
            content += "<tr>";
            content += $"<th>{item.Id}</th>";
            content += $"<th>{item.Name}</th>";
            content += $"<th>{item.PhoneNumber}</th>";
            content += $"<th>{item.Email}</th>";
            content += $"<th>{item.Attention}</th>";
            content += "</tr>";
        }
    }


    <h1>Участники</h1>
    <div>
        <table>
            @empty
            @Html.Raw(content)
        </table>
    </div>
    @Html.ActionLink("На главную", "../Home/Index")
</body>
</html>