@model Application.Models.Goods

@{
    ViewBag.Title = "Админ панель: создание товара";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Goods creation</h3>
    </div>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="panel-body">
            @Html.HiddenFor(m => m.Id)
            @foreach (var property in ViewData.ModelMetadata.Properties)
            {
                if (property.PropertyName != "Id")
                {
                    <label>@(property.PropertyName)</label>
                    if (property.PropertyName == "Description")
                    {
                        @Html.TextArea(property.PropertyName, null,
                            new { @class = "form-control", rows = 10 })
                    }
                    else
                    {
                        @Html.TextBox(property.PropertyName, null,
                            new { @class = "form-control" })
                    }
                }
            }
        </div>
        <div class="panel-footer">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
            @Html.ActionLink("Отменить изменения и вернуться к списку", "Admin", null, new
            {
                @class = "btn btn-default"
            })
        </div>
    }
</div>

